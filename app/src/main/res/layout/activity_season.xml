<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.firstproject.SeasonActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="sea1"
            android:id="@+id/sea1"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#f2a008"
            android:text="SUMMER"
            android:textColor="#ffff"
            android:textSize="30sp"
            android:drawableLeft="@drawable/summer2"

            />
        <Button
            android:onClick="sea2"
            android:id="@+id/sea2"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="RAINY"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:background="#594a4a"
            android:drawableLeft="@drawable/rainy3"/>
        <Button
            android:onClick="sea3"
            android:id="@+id/sea3"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="AUTUMN"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:background="#ea951e"
            android:drawableLeft="@drawable/autumn2"/>

        <Button
            android:id="@+id/sea4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:background="#594a4a"
            android:drawableLeft="@drawable/lateautumn2"
            android:onClick="sea4"
            android:text="LATE AUTUMN"
            android:textColor="#ffff"
            android:textSize="30sp" />

        <Button
            android:onClick="sea5"
            android:id="@+id/sea5"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="WINTER"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:background="#ec851e"
            android:drawableLeft="@drawable/winter2"/>

        <Button
            android:onClick="sea6"
            android:id="@+id/sea6"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="SPRING"
            android:textSize="30sp"
            android:textColor="#ffff"
            android:background="#594a4a"
            android:drawableLeft="@drawable/spring2"/>


    </LinearLayout>

</ScrollView>



