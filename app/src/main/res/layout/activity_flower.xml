<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.firstproject.FlowerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageButton
        android:src="@drawable/jasmine2"
        android:id="@+id/imgbtn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/rounded_button"
       />

    <ImageButton
        android:src="@drawable/lily2"
        android:background="@drawable/rounded_button"
        android:id="@+id/imgbtn2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@+id/imgbtn1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
      />

    <ImageButton
        android:src="@drawable/daisy1"
        android:id="@+id/imgbtn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignStart="@+id/imgbtn1"
        android:layout_below="@+id/imgbtn1"
        android:layout_marginTop="11dp"
        android:background="@drawable/rounded_button"
      />

    <ImageButton
        android:src="@drawable/gulmohar1"
        android:id="@+id/imgbtn4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/imgbtn2"
        android:layout_alignTop="@+id/imgbtn3"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rounded_button"
     />
    <ImageButton
        android:src="@drawable/maarigold3"
        android:id="@+id/imgbtn5"
        android:layout_alignStart="@+id/imgbtn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/imgbtn3"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button"/>
    <ImageButton
        android:src="@drawable/orchid1"
        android:id="@+id/imgbtn6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/imgbtn2"
        android:layout_alignTop="@+id/imgbtn5"
        android:background="@drawable/rounded_button"/>
    <ImageButton
        android:src="@drawable/lotus"
        android:id="@+id/imgbtn7"
        android:layout_alignStart="@+id/imgbtn1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/imgbtn5"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button"/>
    <ImageButton
        android:src="@drawable/chinarose"
        android:id="@+id/imgbtn8"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/imgbtn6"
        android:layout_alignTop="@+id/imgbtn7"
        android:background="@drawable/rounded_button"/>
        <ImageButton
            android:src="@drawable/sunflower"
            android:id="@+id/imgbtn9"
            android:layout_alignStart="@+id/imgbtn1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/imgbtn7"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_button"/>
        <ImageButton
            android:src="@drawable/kadamba"
            android:id="@+id/imgbtn10"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/imgbtn8"
            android:layout_alignTop="@+id/imgbtn9"
            android:background="@drawable/rounded_button"/>
   </RelativeLayout>


</ScrollView>
