<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_image"
    tools:context="com.example.dell.firstproject.DifferentActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:text="WEEK"
        android:textColor="#2e0fde"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button27"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:text="Season"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#186e73"/>

    <Button
        android:id="@+id/button28"
        android:layout_width="240dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/button27"
        android:layout_below="@+id/button27"
        android:textSize="30sp"
        android:textColor="#68104f"
        android:text="MONTH"
        android:textStyle="bold"
       />

    <Button
        android:id="@+id/button30"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/button28"
        android:layout_below="@+id/button28"
        android:text="Flower"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#0d3105"/>

    <Button
        android:id="@+id/button31"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignStart="@+id/button30"
        android:layout_below="@+id/button30"
        android:text="FRUIT"
        android:textColor="#6e0909"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>
